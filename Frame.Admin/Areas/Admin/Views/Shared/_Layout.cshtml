@using Frame.WebCore.User
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>后台管理系统</title>
    <meta name="viewport" content="width=device-width, initial-scale=1 user-scalable=no">
    <link href="~/lib/layui/css/layui.css" rel="stylesheet" />
    <link href="~/lib/layer/theme/default/layer.css" rel="stylesheet" />

    <!--引入解析markdown的样式文件-->
    <link href="~/lib/editormd/css/editormd.min.css" rel="stylesheet" />

    <link href="~/Common/css/Common.css" rel="stylesheet" />
    <link href="~/Source/Layout/css/Layout.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body class="layui-layout-body">
    <div class="layui-layout layui-layout-admin">
        <div class="layui-header">
            <div class="layui-logo">我的后台</div>
            <ul class="layui-nav layui-layout-right">
                <li class="layui-nav-item">
                    <a href="javascript:;">
                        <img src="http://t.cn/RCzsdCq" class="layui-nav-img">
                        @{
                            <span>@UserManager.Get(User.Identity.Name).Result.Name</span>
                        }
                    </a>
                    <dl class="layui-nav-child">
                        <dd><a href="">个人中心</a></dd>
                        <dd><a href="">安全设置</a></dd>
                    </dl>
                </li>
                <li class="layui-nav-item"><a asp-action="LoginOut" asp-controller="Account">退了</a></li>
            </ul>
        </div>

        <div class="layui-side layui-bg-black">
            <div class="layui-side-scroll">
                <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
                <ul class="layui-nav layui-nav-tree" lay-filter="test">
                    <li class="layui-nav-item"><a asp-action="Home" asp-controller="AdminHome">首页</a></li>
                    <li class="layui-nav-item">
                        <a href="javascript:;">笔记管理</a>
                        <dl class="layui-nav-child">
                            <dd><a href="javascript:;">JavaScript</a></dd>
                        </dl>
                    </li>
                </ul>
            </div>
        </div>

        <div class="layui-body">
            <!-- 内容主体区域 -->
            <div style="padding: 15px;">@RenderBody()</div>
        </div>

        <div class="layui-footer">
            <!-- 底部固定区域 -->
            当前在线人数为：
            <span style="color:red;font-weight:200;">@await UserManager.LoginCount()</span> 人
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
    <script defer src="~/lib/layui/layui.all.js" asp-append-version="true"></script>

    <!--引入markdown解析文件-->
    <script defer src="~/lib/editormd/lib/marked.min.js" asp-append-version="true"></script>
    <script defer src="~/lib/editormd/lib/prettify.min.js" asp-append-version="true"></script>
    <script defer src="~/lib/editormd/lib/raphael.min.js" asp-append-version="true"></script>
    <script defer src="~/lib/editormd/lib/underscore.min.js" asp-append-version="true"></script>
    <script defer src="~/lib/editormd/lib/sequence-diagram.min.js" asp-append-version="true"></script>
    <script defer src="~/lib/editormd/lib/flowchart.min.js" asp-append-version="true"></script>
    <script defer src="~/lib/editormd/lib/jquery.flowchart.min.js" asp-append-version="true"></script>
    <script defer src="~/lib/editormd/editormd.min.js" asp-append-version="true"></script>


    <script defer src="~/Common/js/Common.js" asp-append-version="true"></script>
    <script defer src="~/Source/Layout/js/Layout.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
