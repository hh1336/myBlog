@section Styles{
    <style>
        #content > div {
            background: #fdfdfdde;
            padding-top: 1rem;
            padding-left: 0;
            padding-right: 0;
            box-shadow: 0px 0px 5px #ebebeb;
            margin-bottom: 1rem;
        }

            #content > div > div:last-child {
                margin-top: 1rem;
                border-top: 1px solid #dcdcdc;
                padding-top: 0.5rem;
                padding-bottom: 0.5rem;
            }

        .Actitle h4 {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .Actitle a {
            word-wrap: break-word;
            color: #b2b2b2;
        }

            .Actitle a:hover, .tooltipbar > div:hover {
                text-decoration-line: none;
                animation: acolor 0.5s;
                color: #71be97;
                cursor: pointer;
            }

        @@keyframes acolor {
            from {
                color: #b2b2b2;
            }

            to {
                color: #71be97;
            }
        }

        .tooltipbar > div {
            color: #b2b2b2;
        }
    </style>
}
